<%= render('layouts/errors', :object => @review) %>

<%= form_for [ @product , @review ] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating_out_of_10 %>
  <%= f.text_field :rating %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
